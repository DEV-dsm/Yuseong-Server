{
    "ts-node": {
        "esm": true
    },
    "compilerOptions": {
        "preserveValueImports": false,
        "module": "Node16",
        "target": "es2017",
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "scripts/",
        "strict": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}